{
  "entryFile": "app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["controllers/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "basePath": "/api",
    "entryFile": "app.ts",
    "securityDefinitions": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "routes": {
    "routesDir": "routes",
    "basePath": "/api",
    "entryFile": "app.ts",
    "authenticationModule": "./middlewares/authentication.ts"
  }
}
